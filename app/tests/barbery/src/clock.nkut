import "cts";

/// [b]
timeOverV = [false];

// n
tmStartV = [time.now()];

/// \[b], <timer> -> ()
run = \endV, :timer tm -> {
  if (thread.sleep(tmStartV, cts.clockTime)) return;

  sys.println("Clock: Time is over");
  timeOverV! = true;

  tm.stop();
  endV! = true;
};

